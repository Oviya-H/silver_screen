<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History_page">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/history_list"
        />


    <Button
        android:id="@+id/history_refresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/history_fragment"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/refresh"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_tv1"
        android:text="Refresh"
        android:layout_alignParentRight="true"
        android:layout_below="@id/history_refresh"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:name="com.example.silver_screen.Fragment_bottom"
        android:id="@+id/history_fragment"/>

</RelativeLayout>